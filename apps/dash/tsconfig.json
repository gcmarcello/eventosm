{
  "extends": "@repo/config/ts/next.tsconfig.json",
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "plugins": [
      {
        "name": "next",
      },
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "prisma/*": ["./prisma/*"],
    },
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules", ".next"],
}
