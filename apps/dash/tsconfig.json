{
  "extends": "@repo/config/ts/next.tsconfig.json",
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "target": "es5",
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "declarationMap": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "prisma/*": ["./prisma/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prisma/script.js"
  ],
  "exclude": ["node_modules", ".next"]
}
